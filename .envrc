# Direnv configuration for automatic venv activation
# Install direnv: sudo apt-get install direnv

# Automatically activate Python virtual environment
if [ -f "venv/bin/activate" ]; then
    source venv/bin/activate
else
    echo "‚ö†Ô∏è Virtual environment not found. Running setup..."
    bash setup.sh
    source venv/bin/activate
fi

# Export project-specific environment variables
export PYTHONPATH="${PYTHONPATH}:${PWD}/src"
export POKEMON_PROJECT_ROOT="${PWD}"

# Ensure we're using the right Python
export PYTHON_BIN="${PWD}/venv/bin/python"
export PIP_BIN="${PWD}/venv/bin/pip"

echo "üéÆ claudelearnspokemon environment loaded (Python: $(python --version))"
